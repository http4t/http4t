{
    "compilerOptions": {
        "declaration": true,
        "target": "es2015",
        "lib": [
            "dom",
            "dom.iterable",
            "es2019",
            "es2019.array",
            "es2020.string"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "composite": true,
        "downlevelIteration": true,
        "declarationMap": true,
        "sourceMap": true,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules"
    ]
}
